# GoodReads API Configuration
GOODREADS_API_KEY=your_api_key_here
GOODREADS_API_SECRET=your_api_secret_here
GOODREADS_BASE_URL=https://www.goodreads.com/api

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=readflow
MINIO_SECURE=False

# Airflow Configuration
AIRFLOW_HOME=/opt/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres/airflow
AIRFLOW__CORE__FERNET_KEY=46BKJoQYlPPOexq0OhDZnIlNepKFf87WFwLbfzqDDho=
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW_UID=50000

# Spark Configuration
SPARK_MASTER=spark://spark-master:7077
SPARK_WORKER_CORES=2
SPARK_WORKER_MEMORY=2G
SPARK_EXECUTOR_MEMORY=1G
SPARK_DRIVER_MEMORY=1G

# Data Lake Paths
BRONZE_PATH=s3a://readflow/bronze/goodreads_raw
SILVER_PATH=s3a://readflow/silver/goodreads_clean
GOLD_PATH=s3a://readflow/gold/goodreads_analytics

# DuckDB Configuration
DUCKDB_PATH=/data/warehouse/readflow.duckdb

# Pipeline Configuration
INGESTION_SCHEDULE=*/10 * * * *  # Every 10 minutes
ETL_SCHEDULE=*/15 * * * *         # Every 15 minutes
BATCH_SIZE=1000
MAX_RETRIES=3
RETRY_DELAY=60

# Data Quality
QUALITY_CHECKS_ENABLED=True
ALERT_EMAIL=your_email@example.com

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_INCREMENTAL_LOAD=True
ENABLE_DATA_QUALITY=True
ENABLE_CACHING=True
